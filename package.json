{
  "name": "trilha_cypress",
  "version": "1.0.0",
  "description": "Estudo testes com Cypress",
  "main": "index.js",
  "scripts": {
    "clean:reports": "rmdir /S /Q cypress\\reports && mkdir cypress\\reports && mkdir cypress\\reports\\mochareports",
    "pretest": "npm run cy:open:prod clean:reports",
    "scripts": "cypress run --env allure=true",
    "cy:open:prod": "cypress open --env configFile=prod",
    "cy:run:prod": "cypress run --env allure=true --env configFile=prod",
    "combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochareports/report.json",
    "generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
    "posttest": "npm run cy:open:prod combine-reports && npm run generate-report",
    "test": "npm run cy:open:prod || npm run cy:open:prod posttest",
    "clean:folders": "rm -R -f allure-report/* && rm -R -f allure-results/*",
    "allure:report": "yarn run allure generate allure-results â€” clean -o allure-report && allure open allure-report",
    "beforetest": "npm run clean:folders",
    "tests": "npm run cy:run || npm run aftertest",
    "aftertest": "npm run allure:report"

  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@shelex/cypress-allure-plugin": "^2.38.3",
    "@types/cypress-cucumber-preprocessor": "^4.0.1",
    "cypress": "^9.7.0",
    "cypress-multi-reporters": "^1.6.3",
    "fake": "^0.2.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  },
  "dependencies": {
    "-": "^0.0.1",
    "ajv": "^8.12.0",
    "mocha": "^10.2.0",
    "reporter": "cypress-mochawesome-reporter"
  }
}
